<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.SampleController">
   <bottom>
      <HBox fx:id="hBox" alignment="CENTER" prefHeight="55.0" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="ffnenB" mnemonicParsing="false" onAction="#event_DateiOeffnen" text="Öffnen" />
            <Button fx:id="speichernB" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#event_DateiSpeichern" text="Speichern" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <right>
      <VBox fx:id="vBox" prefHeight="318.0" prefWidth="118.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="ostLabel" text="Schlüsselwort:" />
            <TextField fx:id="SWort" />
            <Button fx:id="verschlB" mnemonicParsing="false" onAction="#event_Verschluesseln" text="Verschlüsseln" />
            <Button fx:id="entschlB" mnemonicParsing="false" onAction="#event_Entschluesseln" text="Entschlüsseln" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
   <top>
      <VBox fx:id="topVBox" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <MenuBar fx:id="menuBar">
              <menus>
                <Menu fx:id="menuDatei" mnemonicParsing="false" text="Datei">
                  <items>
                    <MenuItem fx:id="mDatei_beenden" mnemonicParsing="false" onAction="#event_Menue_Beenden" text="Beenden" />
                  </items>
                </Menu>
                <Menu fx:id="menuBearbeiten" mnemonicParsing="false" text="Bearbeiten">
                  <items>
                    <MenuItem fx:id="mBearbeiten_KeyGenerieren" mnemonicParsing="false" onAction="#event_Menue_KeyGenerieren" text="Key Generieren" />
                  </items>
                </Menu>
                <Menu fx:id="menuHilfe" mnemonicParsing="false" text="Hilfe">
                  <items>
                        <MenuItem fx:id="mHilfe_hilfe" mnemonicParsing="false" onAction="#event_Menue_Hilfe" text="Hilfe" />
                    <MenuItem fx:id="mHilfe_ueber" mnemonicParsing="false" onAction="#event_Menue_Ueber" text="Über" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label fx:id="titelLabel" nodeOrientation="LEFT_TO_RIGHT" text="Textver- und Entschlüsselung">
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <TextArea fx:id="textArea" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </TextArea>
   </center>
</BorderPane>
