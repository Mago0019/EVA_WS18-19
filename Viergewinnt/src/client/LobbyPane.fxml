   <top>
      <VBox fx:id="topVBox" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <MenuBar fx:id="menuBar">
              <menus>
                <Menu fx:id="menuDatei" mnemonicParsing="false" text="Datei">
                  <items>
                    <MenuItem fx:id="mDatei_einstellungen" mnemonicParsing="false" text="Einstellungen" />
                        <MenuItem fx:id="mDatei_beenden1" mnemonicParsing="false" onAction="#event_Menue_Beenden" text="Beenden" />
                  </items>
                </Menu>
                <Menu fx:id="menuHilfe" mnemonicParsing="false" text="Hilfe">
                  <items>
                        <MenuItem fx:id="mHilfe_hilfe" mnemonicParsing="false" onAction="#event_Menue_Hilfe" text="Hilfe" />
                    <MenuItem fx:id="mHilfe_ueber" mnemonicParsing="false" onAction="#event_Menue_Ueber" text="Ãœber" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="createGame_B" mnemonicParsing="false" text="erstelle Spiel" />
            <Button fx:id="joinGame_B" mnemonicParsing="false" text="trete Spiel bei" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="30.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <center>
     <HBox alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
       			  <Label fx:id="lobbyList_L" alignment="CENTER" text="Spieler online">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="lobby_LV" prefHeight="500.0" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label fx:id="gameList_L" text="Offene Spiele">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ListView fx:id="gameList_LV" prefHeight="500.0" />
               </children>
            </VBox>

         </children>
      </HBox>
   </center>
</BorderPane>
